[global]
    font = pango:DejaVu Sans Mono 8

    allow_markup = yes

    format = "<b>%s</b> %b"
    sort = yes
    indicate_hidden = yes
    alignment = left

    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = yes

    # geometry [{width}]x{height}][+/-{x}+/-{y}]
    geometry = "0-0-19"
    shrink = no

    transparency = 0
    idle_threshold = 120
    monitor = 1

    follow = none
    sticky_history = yes
    history_length = 20
    show_indicators = no
    line_height = 0
    separator_height = 1
    padding = 4
    horizontal_padding = 4
    separator_color = frame
    startup_notification = false

    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/firefox -new-tab


# I need to add support for different frame color for multiple
# urgencies. Separator should be also single line and it should
# use the color of the higher priority box.
# color = "#333333" # [ urgency_low ]
# color = "#4c7899" # [ urgency_normal ]
# color = "#900000" # [ urgency_critical ]
[frame]
    width = 1
    color = "#333333"

[shortcuts]
    close = mod4+x
    close_all = mod4+ctrl+x
    history = mod4+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#222222"
    foreground = "#888888"
    timeout = 10

[urgency_normal]
    background = "#285577"
    foreground = "#FFFFFF"
    timeout = 20

[urgency_critical]
    background = "#900000"
    foreground = "#FFFFFF"
    timeout = 0

[irc]
    appname = weechat
    format  = "<b>%s:</b> %b"
    urgency = critical

[pidgin]
    appname = Pidgin
    summary = *says*
    urgency = critical

[hangouts]
    appname = Firefox
    body = *says...
    urgency = critical

[music]
    body = "*- Google Play Music"
    urgency = low

[youtube]
    body = "*- YouTube"
    urgency = low
